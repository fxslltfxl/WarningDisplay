<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_sky_blue">

    <data>

        <variable
            name="VM"
            type="cn.zemic.hy.display.unmannedstoragedisplay.model.viewmodel.UserDisplayVM" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.constraint.Guideline
            android:id="@+id/order_guideline_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0" />

        <android.support.constraint.Guideline
            android:id="@+id/order_guideline_25"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2" />

        <android.support.constraint.Guideline
            android:id="@+id/order_guideline_50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />

        <android.support.constraint.Guideline
            android:id="@+id/order_guideline_100"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="1" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_warning_item"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_28"
            app:layout_constraintEnd_toStartOf="@+id/order_guideline_25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{VM.userName}"
            tools:text="张三" />

        <View
            android:layout_width="2dp"
            android:layout_height="@dimen/height_warning_item"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/order_guideline_25"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="2dp"
            android:layout_height="@dimen/height_warning_item"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/order_guideline_50"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/user_no"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/height_warning_item"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_28"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/order_guideline_50"
            app:layout_constraintStart_toStartOf="@id/order_guideline_25"
            android:text="@{VM.userNo}"
            tools:text="H1000" />

        <TextView
            android:id="@+id/material_no"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/height_warning_item"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_28"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/order_guideline_100"
            app:layout_constraintStart_toStartOf="@id/order_guideline_50"
            android:text="@{VM.applyNo}"
            tools:text="ZOS1234567890123" />


    </android.support.constraint.ConstraintLayout>
</layout>

