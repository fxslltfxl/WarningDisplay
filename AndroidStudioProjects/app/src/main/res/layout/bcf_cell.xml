        app:layout_constraintLeft_toRightOf="@+id/bcf_ver_guideline_12"/>

    <ImageView
        android:id="@+id/base_station_third_status"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:layout_marginLeft="8dp"
        app:srcCompat="@drawable/correct"
        app:layout_constraintBottom_toBottomOf="@+id/bcf_hor_guideline_73"
        app:layout_constraintLeft_toRightOf="@+id/base_station_third"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/base_station"
        app:layout_constraintBottom_toBottomOf="@+id/bcf_hor_guideline_96"
        app:layout_constraintRight_toLeftOf="@+id/bcf_ver_guideline_10"/>

    <TextView
        android:id="@+id/base_station_fourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:text="基站1"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/bcf_hor_guideline_96"
