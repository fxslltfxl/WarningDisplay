    <ImageView
        android:id="@+id/camer_second_status"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:layout_marginLeft="8dp"
        app:srcCompat="@drawable/correct"
        app:layout_constraintBottom_toBottomOf="@+id/bcf_hor_guideline_73"
        app:layout_constraintLeft_toRightOf="@+id/camera_second"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/fingerprint"
        app:layout_constraintBottom_toBottomOf="@+id/bcf_hor_guideline_48"
        app:layout_constraintRight_toLeftOf="@+id/bcf_ver_guideline_70"/>

