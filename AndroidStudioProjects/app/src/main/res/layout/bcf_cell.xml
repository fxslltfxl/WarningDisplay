        app:layout_constraintBottom_toBottomOf="@+id/bcf_hor_guideline_23"
        app:layout_constraintLeft_toRightOf="@+id/bcf_ver_guideline_12"/>

    <ImageView
        android:id="@+id/base_station_first_status"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
