            android:layout_marginTop="@dimen/fifteen"
            android:layout_marginEnd="@dimen/height_50"
            android:layout_marginRight="@dimen/height_50"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/out_hor_guideline_13"
            app:layout_constraintWidth_percent="0.3">

            <TextView
                android:id="@+id/user_no"
                android:layout_width="@dimen/zero"
                android:layout_height="@dimen/height_warning_item"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/user_name_new"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_35" />

            <View
                android:layout_width="2dp"
                android:layout_height="@dimen/height_warning_item"
                android:background="@color/white"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/warn_type"
                android:layout_width="@dimen/zero"
                android:layout_height="@dimen/height_warning_item"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/user_no"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_35" />

            <View
                android:layout_width="2dp"
                android:layout_height="@dimen/height_warning_item"
                android:background="@color/white"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/material_no"
                android:layout_width="@dimen/zero"
                android:layout_height="@dimen/height_warning_item"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/order_no"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_35" />


        </LinearLayout>


