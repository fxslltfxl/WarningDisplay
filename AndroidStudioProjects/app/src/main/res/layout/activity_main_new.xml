                app:layout_constraintRight_toLeftOf="@+id/bcf_ver_guideline_10"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />

            <TextView
                android:id="@+id/base_station_fourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_30"
                android:orientation="horizontal"
                android:text="基站4"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_45"
                app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                app:layout_constraintLeft_toRightOf="@+id/bcf_ver_guideline_10" />

            <ImageView
                android:id="@+id/base_station_fourth_status"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/correct"
                app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                app:layout_constraintLeft_toRightOf="@+id/base_station_fourth" />


            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/camera"
                app:layout_constraintBottom_toTopOf="@+id/imageView15"
                app:layout_constraintRight_toLeftOf="@+id/bcf_ver_guideline_40"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/camera_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/height_30"
                android:layout_marginLeft="@dimen/height_30"
                android:orientation="horizontal"
                android:text="摄像头1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_45"
                app:layout_constraintBottom_toBottomOf="@+id/imageView14"
                app:layout_constraintLeft_toRightOf="@+id/imageView14" />

            <ImageView
                android:id="@+id/camer_first_status"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/correct"
                app:layout_constraintBottom_toBottomOf="@+id/imageView14"
                app:layout_constraintLeft_toRightOf="@+id/camera_first" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/camera"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/bcf_ver_guideline_40"
                app:layout_constraintTop_toBottomOf="@+id/imageView14" />

            <TextView
                android:id="@+id/camera_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/height_30"
                android:layout_marginLeft="@dimen/height_30"
                android:orientation="horizontal"
                android:text="摄像头2"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_45"
                app:layout_constraintBottom_toBottomOf="@+id/imageView15"
                app:layout_constraintLeft_toRightOf="@+id/bcf_ver_guideline_40" />

            <ImageView
                android:id="@+id/camer_second_status"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/correct"
                app:layout_constraintBottom_toBottomOf="@+id/imageView15"
                app:layout_constraintLeft_toRightOf="@+id/camera_second" />

            <ImageView
                android:id="@+id/image_fingerprint"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/fingerprint"
                app:layout_constraintBottom_toTopOf="@+id/image_door"
                app:layout_constraintRight_toLeftOf="@+id/bcf_ver_guideline_70"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fingerprint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_30"
