            android:textSize="@dimen/text_size_180"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/out_hor_guideline_95"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_form_title" />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/av_loading_view"
            style="@style/AVLoadingIndicatorView.Large"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="visible"
            app:indicatorColor="@color/btn_blue_bg"
            app:indicatorName="BallTrianglePathIndicator"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.Group
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="main_title,rv_state,rv_user,other_state,ll_form_title,tv_temperature_humidity,tv_year_month,tv_week,tv_time" />

    </android.support.constraint.ConstraintLayout>
