                android:layout_marginLeft="@dimen/height_30"
                android:text="基站3"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_45"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                app:layout_constraintLeft_toRightOf="@+id/bcf_ver_guideline_10" />

            <ImageView
                android:id="@+id/base_station_third_status"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/correct"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                app:layout_constraintLeft_toRightOf="@+id/base_station_third" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/base_station"
