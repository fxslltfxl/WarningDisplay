            android:textSize="@dimen/text_size_30"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/out_hor_guideline_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ver_guideline_90"
