                android:text="指纹仪"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_45"
                app:layout_constraintBottom_toBottomOf="@+id/image_fingerprint"
                app:layout_constraintLeft_toRightOf="@+id/bcf_ver_guideline_70" />

            <ImageView
                android:id="@+id/fingerprint_status"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/error"
                app:layout_constraintBottom_toBottomOf="@+id/image_fingerprint"
                app:layout_constraintLeft_toRightOf="@+id/fingerprint" />


            <ImageView
                android:id="@+id/image_door"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/door"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/bcf_ver_guideline_70"
                app:layout_constraintTop_toBottomOf="@+id/image_fingerprint" />

            <TextView
                android:id="@+id/door"
