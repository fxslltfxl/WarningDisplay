    <android.support.constraint.Guideline
        android:id="@+id/cell_hor_guideline_0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0" />

    <android.support.constraint.Guideline
        android:id="@+id/cell_ver_guideline_40"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.48" />

    <android.support.constraint.Guideline
        android:id="@+id/cell_ver_guideline_45"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <android.support.constraint.Guideline
    android:id="@+id/cell_hor_guideline_20"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:id="@+id/cell_hor_guideline_40"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.49" />

    <android.support.constraint.Guideline
        android:id="@+id/cell_hor_guideline_60"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.71" />

    <android.support.constraint.Guideline
        android:id="@+id/cell_hor_guideline_80"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.94" />

    <android.support.constraint.Guideline
        android:id="@+id/cell_hor_guideline_100"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1" />

    <TextView
        android:id="@+id/shelf_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:text="货架"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/cell_hor_guideline_20" />

    <ImageView
        android:id="@+id/warn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="24dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/cell_hor_guideline_40"
        app:layout_constraintRight_toLeftOf="@+id/cell_ver_guideline_40"
        app:srcCompat="@drawable/warn_normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:text="@string/warn"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/cell_hor_guideline_40"
        app:layout_constraintLeft_toRightOf="@+id/cell_ver_guideline_45"/>

    <ImageView
        android:id="@+id/error"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="24dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/cell_hor_guideline_60"
        app:layout_constraintRight_toLeftOf="@+id/cell_ver_guideline_40"
        app:srcCompat="@drawable/error_normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:text="@string/unconnect"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/cell_hor_guideline_60"
        app:layout_constraintLeft_toRightOf="@+id/cell_ver_guideline_45"/>

    <ImageView
        android:id="@+id/correct"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="24dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/cell_hor_guideline_80"
        app:layout_constraintRight_toLeftOf="@+id/cell_ver_guideline_40"
        app:srcCompat="@drawable/correct" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:text="@string/normal"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/cell_hor_guideline_80"
        app:layout_constraintLeft_toRightOf="@+id/cell_ver_guideline_45"/>

</android.support.constraint.ConstraintLayout>