    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_warning_item"
        android:background="@color/toast_color"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/tv_user_no"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/height_warning_item"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{VM.userNo}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />


        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/height_warning_item"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{VM.userName}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />


        <TextView
            android:id="@+id/tv_warn_type"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/height_warning_item"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{VM.warnType}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />



        <TextView
            android:id="@+id/tv_material_no"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/height_warning_item"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{VM.matterNo}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />


        <TextView
            android:id="@+id/tv_material_name"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/height_warning_item"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{VM.matterName}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />


        <TextView
            android:id="@+id/tv_warn_content"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/height_warning_item"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@{VM.warnContent}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>
</layout>