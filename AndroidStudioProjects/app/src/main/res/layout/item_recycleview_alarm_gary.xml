<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="VM"
            type="cn.zemic.hy.display.unmannedstoragedisplay.model.viewmodel.OperateWarningInformViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_warning_item"
        android:background="@color/toast_color"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/height_warning_item"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{VM.wareHouseNo}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_35" />


        <TextView
            android:id="@+id/tv_warn_type"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/height_warning_item"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{VM.warnType}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_35" />



        <TextView
            android:id="@+id/tv_material_no"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/height_warning_item"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{VM.matterNo}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_35" />


        <TextView
            android:id="@+id/tv_material_name"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/height_warning_item"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{VM.matterName}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_30" />


        <TextView
            android:id="@+id/tv_warn_content"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/height_warning_item"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@{VM.warnContent}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_22" />

    </LinearLayout>
</layout>