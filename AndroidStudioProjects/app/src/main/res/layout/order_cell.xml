<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/end_blue">

    <android.support.constraint.Guideline
        android:id="@+id/order_guideline_0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0" />

    <android.support.constraint.Guideline
        android:id="@+id/order_guideline_25"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <android.support.constraint.Guideline
        android:id="@+id/order_guideline_50"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <android.support.constraint.Guideline
        android:id="@+id/order_guideline_100"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1" />

    <TextView
        android:id="@+id/user_no"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_warning_item"
        android:gravity="center"
        tools:text="张三"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_35"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/order_guideline_25" />

    <View
        android:layout_width="2dp"
        android:layout_height="@dimen/height_warning_item"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/order_guideline_25"/>

    <View
        android:layout_width="2dp"
        android:layout_height="@dimen/height_warning_item"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/order_guideline_50"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/warn_type"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/height_warning_item"
        android:gravity="center"
        tools:text="H1000"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_35"
        app:layout_constraintStart_toStartOf="@id/order_guideline_25"
        app:layout_constraintEnd_toStartOf="@id/order_guideline_50"/>

    <TextView
        android:id="@+id/material_no"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/height_warning_item"
        android:gravity="center"
        tools:text="ZOS1234567890123"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_35"
        app:layout_constraintStart_toStartOf="@id/order_guideline_50"
        app:layout_constraintEnd_toEndOf="@id/order_guideline_100"/>


</android.support.constraint.ConstraintLayout>
