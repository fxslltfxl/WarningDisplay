<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="VM"
            type="cn.zemic.hy.display.unmannedstoragedisplay.model.viewmodel.UserDisplayVM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_warning_item"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{VM.userName}"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_28"
            tools:text="张三" />

        <View
            android:layout_width="2dp"
            android:layout_height="@dimen/height_warning_item"
            android:background="@color/white" />

        <TextView
            android:id="@+id/user_no"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/height_warning_item"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{VM.userNo}"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_28"
            app:layout_constraintBottom_toTopOf="parent"
            tools:text="H1000" />

        <View
            android:layout_width="2dp"
            android:layout_height="@dimen/height_warning_item"
            android:background="@color/white" />

        <TextView
            android:id="@+id/material_no"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/height_warning_item"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@{VM.applyNo}"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_28"
            tools:text="ZOS1234567890123" />

    </LinearLayout>

</layout>

